    <script>
    document.addEventListener('DOMContentLoaded', () => {
        // --- INITIALIZATION ---
        try {
            feather.replace();
        } catch (e) {
            console.error("Feather Icons failed to initialize.", e);
        }

        // --- MENU DATA ---
        const menuData = {
            coffee: [
                { name: "Espresso", description: "A concentrated coffee beverage...", price: "â‚¹150" },
                { name: "Americano", description: "A shot of espresso diluted with hot water...", price: "â‚¹180" },
                { name: "Cappuccino", description: "An espresso-based coffee drink...", price: "â‚¹220" },
                { name: "Latte", description: "A coffee drink made with espresso and steamed milk...", price: "â‚¹220" },
                { name: "Mocha", description: "A chocolate-flavoured variant of a caffÃ¨ latte...", price: "â‚¹250" },
                { name: "Pour Over", description: "A manual brewing method...", price: "â‚¹280" }
            ],
            tea: [
                { name: "Masala Chai", description: "A classic Indian spiced tea...", price: "â‚¹120" },
                { name: "Green Tea", description: "Made from unoxidized leaves...", price: "â‚¹150" },
                { name: "Matcha Latte", description: "Finely ground powder of green tea leaves...", price: "â‚¹240" },
                { name: "Earl Grey", description: "A black tea blend with oil of bergamot.", price: "â‚¹180" },
                { name: "Iced Tea", description: "A refreshing chilled tea...", price: "â‚¹160" },
                { name: "Herbal Infusion", description: "A caffeine-free blend of herbs...", price: "â‚¹170" },
            ],
            pastries: [
                { name: "Croissant", description: "A buttery, flaky, viennoiserie pastry...", price: "â‚¹180" },
                { name: "Chocolate Chip Cookie", description: "A classic drop cookie...", price: "â‚¹120" },
                { name: "Blueberry Muffin", description: "A tender muffin with fresh blueberries...", price: "â‚¹150" },
                { name: "Cinnamon Roll", description: "A sweet rolled pastry...", price: "â‚¹200" },
                { name: "Banana Bread", description: "Made from mashed bananas...", price: "â‚¹160" },
                { name: "Almond Biscotti", description: "A twice-baked Italian almond biscuit...", price: "â‚¹100" },
            ]
        };

        // --- UI ELEMENTS ---
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const header = document.getElementById('header');
        const scrollToTopBtn = document.getElementById('scrollToTopBtn');
        const getPairingBtn = document.getElementById('get-pairing-btn');
        const pairingResultDiv = document.getElementById('pairing-result');
        const menuItemSelect = document.getElementById('menu-item-select');
        const errorModal = document.getElementById('error-modal');
        const errorMessage = document.getElementById('error-message');
        const closeModalBtn = document.getElementById('close-modal-btn');
        const loyaltyEmailInput = document.getElementById('loyalty-email');
        const joinLoyaltyBtn = document.getElementById('join-loyalty-btn');
        const loyaltyFeedback = document.getElementById('loyalty-feedback');

        // --- GENERAL INTERACTIVITY ---
        mobileMenuButton.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));
        document.querySelectorAll('#mobile-menu a, #mobile-menu-button').forEach(link => {
            link.addEventListener('click', () => {
                 setTimeout(() => mobileMenu.classList.add('hidden'), 100);
            });
        });
        document.getElementById('year').textContent = new Date().getFullYear();

        window.addEventListener('scroll', () => {
            header.classList.toggle('bg-white', window.scrollY > 50);
            header.classList.toggle('shadow-md', window.scrollY > 50);
            header.classList.toggle('bg-transparent', window.scrollY <= 50);
            scrollToTopBtn.classList.toggle('hidden', document.body.scrollTop <= 300 && document.documentElement.scrollTop <= 300);
        });

        scrollToTopBtn.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }));

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });
        document.querySelectorAll('.fade-in-up').forEach(el => observer.observe(el));

        // --- MENU SECTION LOGIC ---
        const createMenuItem = (item) => `
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1">
                <div class="flex justify-between items-baseline">
                    <h4 class="font-bold text-lg text-[#6b4f4b]">${item.name}</h4>
                    <p class="font-semibold text-[#c0a080]">${item.price}</p>
                </div>
                <p class="text-gray-600 mt-2 text-sm">${item.description}</p>
            </div>`;

        const populateMenu = () => {
            document.getElementById('coffee').innerHTML = menuData.coffee.map(createMenuItem).join('');
            document.getElementById('tea').innerHTML = menuData.tea.map(createMenuItem).join('');
            document.getElementById('pastries').innerHTML = menuData.pastries.map(createMenuItem).join('');
        };
        populateMenu();

        document.querySelectorAll('.menu-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.menu-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.menu-panel').forEach(p => p.classList.add('hidden'));
                tab.classList.add('active');
                document.getElementById(tab.dataset.target).classList.remove('hidden');
            });
        });
        
        // --- AI PAIRING SECTION LOGIC ---
        const populatePairingDropdown = () => {
            const allItems = [...menuData.coffee, ...menuData.tea, ...menuData.pastries];
            menuItemSelect.innerHTML = allItems.map(item => `<option value="${item.name}">${item.name}</option>`).join('');
        };
        populatePairingDropdown();

        const showErrorModal = (message = "An unknown error occurred. Please try again.") => {
            errorMessage.textContent = message;
            errorModal.classList.remove('hidden');
        };

        closeModalBtn.addEventListener('click', () => errorModal.classList.add('hidden'));

        getPairingBtn.addEventListener('click', async () => {
            const selectedItem = menuItemSelect.value;
            if (!selectedItem) return;

            pairingResultDiv.innerHTML = '<div class="loader"></div>';
            getPairingBtn.disabled = true;

            const userQuery = `I am at a friendly coffee shop called 'The Daily Grind'. I'm thinking of having a ${selectedItem}. What is a creative and delicious food or drink pairing for it from a typical coffee shop menu? Please provide a short, one-paragraph suggestion.`;
            
            const apiKey = ""; 
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;

            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
            };
            
            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(`API request failed with status ${response.status}.`);
                }

                const result = await response.json();
                const candidate = result.candidates?.[0];

                if (candidate && candidate.content?.parts?.[0]?.text) {
                    const text = candidate.content.parts[0].text;
                    pairingResultDiv.innerHTML = `<p class="text-gray-700">${text.replace(/\n/g, '<br>')}</p>`;
                } else {
                     throw new Error("Invalid response structure from the API.");
                }

            } catch (error) {
                console.error('Error fetching pairing suggestion:', error);
                pairingResultDiv.innerHTML = `<p class="text-red-500">Sorry, we couldn't fetch a suggestion right now. Please try again.</p>`;
                showErrorModal("We couldn't connect to our AI Barista. Please check your connection and try again.");
            } finally {
                getPairingBtn.disabled = false;
            }
        });

        // --- LOYALTY PROGRAM LOGIC ---
        joinLoyaltyBtn.addEventListener('click', () => {
            const email = loyaltyEmailInput.value.trim();
            loyaltyFeedback.textContent = '';
            loyaltyFeedback.classList.remove('text-green-600', 'text-red-600', 'text-blue-600');

            if (!/^\S+@\S+\.\S+$/.test(email)) {
                loyaltyFeedback.textContent = 'Please enter a valid email address.';
                loyaltyFeedback.classList.add('text-red-600');
                return;
            }

            try {
                let loyalMembers = JSON.parse(localStorage.getItem('dailyGrindMembers')) || [];
                if (loyalMembers.includes(email)) {
                    loyaltyFeedback.textContent = "You're already a member! Welcome back.";
                    loyaltyFeedback.classList.add('text-blue-600');
                } else {
                    loyalMembers.push(email);
                    localStorage.setItem('dailyGrindMembers', JSON.stringify(loyalMembers));
                    loyaltyFeedback.textContent = 'ðŸŽ‰ Thank you for joining the club!';
                    loyaltyFeedback.classList.add('text-green-600');
                    loyaltyEmailInput.value = '';
                }
            } catch (e) {
                console.error("Could not access localStorage:", e);
                loyaltyFeedback.textContent = 'Could not save your details. Please enable cookies/storage.';
                loyaltyFeedback.classList.add('text-red-600');
            }
        });

    });
    </script>
</body>
</html>

